{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": [ "node_modules", "frontend" ],
                "extensions": [ ".ts" ]
            }
        }
    },
    "rules": {
        "sort-imports": [
            "warn", { "ignoreCase": true, "ignoreDeclarationSort": true }
        ],
        "import/order": [
            "warn", {
                "groups": [
                    "external",
                    "builtin",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always"
            }
        ],
        "import/no-useless-path-segments": [ "warn" ],
        "import/no-unresolved": [
            "error", {
                "ignore": [
                    "@angular/core/testing",
                    "@angular/router/testing"
                ]
            }
        ]
    }
}
